@model NHibernateTest.Models.Store

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<div>
    <h4>Store</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <h4>Products</h4>
    <p>
        @Html.ActionLink("Dodaj product", "Create", "Product", new { parentId = Model.Id }, null)
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Product", new { id = item.Id, parentId = Model.Id }, null) |
                    @Html.ActionLink("Details", "Details", "Product", new { id = item.Id, parentId = Model.Id }, null) |
                    @Html.ActionLink("Delete", "Delete", "Product", new { id = item.Id, parentId = Model.Id }, null)
                </td>
            </tr>
        }
        </table>
    <h4>Staff</h4>
    <p>
        @Html.ActionLink("Dodaj pracownika", "Create", "Employee", new { parentId = Model.Id }, null)
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.Staff)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Employee" ,new { id = item.Id, parentId = Model.Id }, null) |
                    @Html.ActionLink("Details", "Details", "Employee", new { id = item.Id, parentId = Model.Id }, null) |
                    @Html.ActionLink("Delete", "Delete", "Employee", new { id = item.Id, parentId = Model.Id }, null)
                </td>
            </tr>
        }
        </table>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>